

<div class="row">
    @Html.Partial("_CameraInfoText")
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @Html.Partial("_Camera")
    </div>
</div>

<div class="row col-md-4 col-md-offset-4 text-center">
    <input type="button" class="btn btn-success" value="Analyze" onClick="initFaceRecognition()"> 
    <input type="button" id="createPersonBtn"class="btn btn-success" value="Create Person" onclick="addPerson()">
    <button class="btn btn-danger" onClick="CancelPreview()">Cancel</button>
</div>

<!-- The Modal -->
<div id="createPersonModal" class="modal row col-md-4 col-md-offset-4 text-center" style="width: 500px">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close" id="closeModalBtn" onclick="hideCPmodal()">x</span>
        <h4>User Name</h4>
        <input type="text" id="personName" /> </br>
        <h4>Description</h4>
        <input type="text" id="personDescription" /> </br></br>
        <button type="submit" id="descriptionText" class="btn btn-info" onclick="addPerson(personName.value, personDescription.value)">OK</button>
    </div>

</div>

<br />
<div class="row col-md-4 col-md-offset-4 text-center">
 <p id="recognizedPerson"></p>

</div>




@section Scripts {
<script src="~/Scripts/FaceRecognition.js"></script>
<script src="~/Scripts/App.js"></script>
}
