<section id="features" class="features">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="section-heading">
                    <h2>Awesome Camera</h2>
                    <p class="text-muted">Take awesome pictures with our camera!</p>
                    <hr>
                    <h3>Press the home button on the phone to snap a picture.</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="device-container">
                    <div class="device-mockup iphone6_plus landscape white">
                        <div class="device">
                            <div class="screen" id="my_camera">
                            </div>

                            <div class="button" value="Access Camera" onClick="setup(); $(this).hide().next().show();"></div>
                            <div class="button" value="Take Snapshot" onClick="take_snapshot()" style="display:none"></div>

                            <!-- Captured image -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 pull-right">
                <div class="device-container">
                    <div class="device-mockup samsung_tv">
                        <div class="device">
                            <div class="screen" id="results"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-5 text-center">
                <input type="button" class="btn btn-success" value="Save Snapshot" onClick="initEmotion()">
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="text-center">
        <h2>Take a look at your emotions</h2>
        <p id="wow"></p>
    </div>
    <div class="col-md-8 col-md-offset-2">
        <table id="emotions" class="table table-striped">
            <thead>
                <tr>
                    <th>Emotion</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Happiness</td>
                    <td id="Happiness"></td>
                </tr>
                <tr>
                    <td>Surprise</td>
                    <td id="Surprise"></td>
                </tr>
                <tr>
                    <td>Neutral</td>
                    <td id="Neutral"></td>
                </tr>
                <tr>
                    <td>Fear</td>
                    <td id="Fear"></td>
                </tr>
                <tr>
                    <td>Contempt</td>
                    <td id="Contempt"></td>
                </tr>
                <tr>
                    <td>Sadness</td>
                    <td id="Sadness"></td>
                </tr>
                <tr>
                    <td>Disgust</td>
                    <td id="Disgust"></td>
                </tr>
                <tr>
                    <td>Anger</td>
                    <td id="Anger"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<p id="hej"></p>

@section Scripts {
    <script src="~/Scripts/Emotion.js"></script>
}