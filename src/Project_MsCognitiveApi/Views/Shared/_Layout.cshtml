<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">

    <!-- Plugin CSS -->
    <link rel="stylesheet" href="~/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/vendor/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/vendor/device-mockups/device-mockups.min.css">

    <!-- Theme CSS -->
    <link href="~/css/new-age.min.css" rel="stylesheet">
    <link href="~/Styles/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '1747430285520026',
                xfbml: true,
                version: 'v2.7'
            });
            FB.AppEvents.logPageView();
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <nav class="navbar navbar-inverse">
        <!-- Trigger/Open The Modal -->
        <button id="myBtn" class="btn btn-info" style="margin-top: 9px;">Login</button>

        <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
        </fb:login-button>

        <div id="status">
        </div>

        <!-- The Modal -->
        <div id="myModal" class="modal" style="width: 500px">

            <!-- Modal content -->
            <div class="modal-content">
                <span class="close">x</span>
                <h4>User Name</h4>
                <input type="text" id="loginUserName" /> </br>
                <h4>Password</h4>
                <input type="password" id="password" /> </br></br>
                <button type="submit" id="loginOkButton" class="btn btn-info">Login</button>
            </div>

        </div>

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="page-scroll" href="/home/emotion">Emotion API</a>
            </li>
            <li>
                <a class="page-scroll" href="/home/vision">Vision API</a>
            </li>
            <li>
                <a class="page-scroll" href="/home/facerecognition">FaceRecognition API</a>
            </li>

        </ul>

    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <!-- jQuery -->
    <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="~/vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Other JavaScript -->
    <script src="~/js/new-age.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/Libs/webcam.js"></script>
    <script src="~/Scripts/App.js"></script>
    @RenderSection("Scripts")
</body>
</html>
